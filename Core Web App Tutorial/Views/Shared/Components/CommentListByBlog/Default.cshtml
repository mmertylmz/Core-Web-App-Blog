@model IEnumerable<EntityLayer.Concrete.Comment>
  <div class="comment-top">
	@if (Model.Count().Equals(0))
	{
				  <h2>Daha önce hiç yorum yapılmamış.</h2>
	}
	else
	{
		<h4>Yorumlar</h4>
		@foreach (var item in Model)
		{
				<div class="media">

				  <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
				  <div class="media-body">
					<h5 class="mt-0">@item.CommentUserName</h5>
					<p>
						@item.CommentContent
					</p>


				  </div>

				</div>
		}
	}
  </div>
