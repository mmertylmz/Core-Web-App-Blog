@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            
            @if (item.BlogStatus)
            {
                <td>
                <span class="badge badge-success">Aktif</span>    
                </td>
            }
            else
            {
                <td>
                <span class="badge badge-warning">Pasif</span>   
                </td>
            }
            @*<td><a href="/Blog/BlogDelete/@item.BlogID" id="btn1" onclick="return confirm('Silmek istediğine emin misin?');"  class="btn btn-danger">Sil</a></td>*@
             
<!--Sil modal Butonu-->
<td>
<button type="button" class="btn btn-outline-danger btn-sm" data-toggle="modal" data-target="#Sil_@item.BlogID">Sil</button>
<!--Modal-->
<div class="modal fade" id="Sil_@item.BlogID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Blog Sil</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
         </div>
         <div class="modal-body">
            <h4>Bloğu silmek istiyor musunuz?</h4>
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-info mx-4" data-dismiss="modal">Vazgeç</button>
            @Html.ActionLink("Sil","BlogDelete", new { id = @item.BlogID }, new { @class = "btn btn-danger mx-4" })
            
         </div>
      </div>
   </div>
</div>
</td>
            <td><a href="/Blog/BlogEdit/@item.BlogID" class="btn btn-outline-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Blog/BlogAdd/" class="btn btn-primary">Yeni Blog Oluştur</a>





